@model MovieReviewSystem.Models.User
@{
    ViewBag.Title = "Register";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    /* Background Image + Overlay */
    .register-bg {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8)),
                    url('https://images.unsplash.com/photo-1612831455540-17e3f3a9e7ee?auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
        background-size: cover;
    }

    .register-card {
        background: rgba(0,0,0,0.75);
        padding: 30px;
        border-radius: 12px;
        width: 350px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.5);
        color: white;
    }

    .register-card h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .register-card input {
        margin-bottom: 15px;
    }

    .register-card a {
        color: #ffb703;
        text-decoration: none;
    }

    .register-card a:hover {
        text-decoration: underline;
    }
</style>

<div class="register-bg">
    <div class="register-card">
        <h2>üìù Create Account</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post">
            <input asp-for="Name" class="form-control" placeholder="Name" required />
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" required />
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
            <button class="btn btn-success w-100 mt-2" type="submit">Register</button>
        </form>

        <p class="mt-3 text-center">
            Already have an account? <a href="/Account/Login">Login</a>
        </p>
    </div>
</div>




